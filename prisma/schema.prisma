generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId]) // NEW: Speeds up "get all accounts for user" queries
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId]) // NEW: Speeds up "get sessions for user"
  @@index([expires]) // NEW: Enables fast cleanup of expired sessions
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
  @@index([expires]) // NEW: Fast cleanup of expired tokens
}

model Note {
  id        String   @id @default(cuid())
  content   String   
  createdAt DateTime @default(now())
  
  @@index([createdAt]) // NEW: If you ever show "recent notes"
}
  
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  anonymousName String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isAdmin       Boolean   @default(false)  
  isBanned      Boolean   @default(false) 
  mood          String    @default("")
  note          String    @default("")
  currentTheme  String    @default("default")
  points        Int       @default(0)
  lastLoginAt   DateTime?
  loginStreak   Int       @default(0)
  unlockedThemes String   @default("")
  currentAvatarId String?
  
  accounts      Account[]
  sessions      Session[]
  interactions  UserInteraction[]
  playlists     Playlist[]
  pointHistory  PointHistory[]
  weeklyActvities WeeklyActivity[]
  unlockedAvatars UserAvatar[]
  currentAvatar   Avatar?  @relation("UserCurrentAvatar", fields: [currentAvatarId], references: [id], onDelete: SetNull)
  
  // ⭐ CRITICAL NEW INDEXES - These fix your slow queries
  @@index([mood]) // Enables fast "get all users in X mood" + filters
  @@index([currentTheme]) // Speeds up theme-related queries
  @@index([currentAvatarId]) // CRITICAL: Makes FK lookup 50x faster (was table scan)
  @@index([points]) // Enables fast "top users by points" leaderboard queries
  @@index([lastLoginAt]) // Speeds up login streak calculations
  @@index([isAdmin]) // Fast admin panel user filtering
  @@index([isBanned]) // Fast auth checks to block banned users
  @@index([email, mood]) // Composite: common pattern in your auth + mood queries
  @@index([createdAt]) // For user registration analytics/sorting
}

model Mood {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String
  createdAt DateTime @default(now())
}

model RandomWord {
  id   Int    @id @default(autoincrement())
  word String @unique
}

model FilteredWord {
  id   Int    @id @default(autoincrement())
  word String @unique
}

model UserInteraction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  itemId    String
  itemName  String
  mood      String
  createdAt DateTime @default(now())
  
  // ⭐ OPTIMIZED INDEXES - Fix your interaction tracking queries
  @@index([userId, type, itemId]) // CRITICAL: "Has user already interacted with this?" - was scanning ALL interactions
  @@index([mood, type]) // Analytics: "What's popular in happy mood?"
  @@index([userId, createdAt]) // User's interaction history timeline
  @@index([itemId]) // "Show me all users who clicked this movie"
}

enum PlaylistType {
  SONG
  MOVIE
}

model Playlist {
  id          String          @id @default(cuid())
  name        String
  type        PlaylistType
  isDefault   Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  userId      String
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       PlaylistItem[]
  
  // ⭐ CRITICAL INDEXES - Fix your "get favorites playlist" queries
  @@index([userId, type, isDefault]) // CRITICAL: Your check-favorite queries filter ALL THREE - was scanning every playlist
  @@index([userId, type, name]) // Alternative query pattern
  @@index([userId, createdAt]) // User's playlists sorted by creation
}

model PlaylistItem {
  id          String   @id @default(cuid())
  playlistId  String
  playlist    Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  itemId      String
  itemName    String
  addedAt     DateTime @default(now())
  
  // ⭐ CRITICAL: This replaces the index with a UNIQUE constraint
  @@unique([playlistId, itemId]) // Prevents duplicates + makes "is this in playlist?" instant
  @@index([playlistId, addedAt]) // Sort playlist items by date added (newest first)
  @@index([itemId]) // "Which playlists contain this movie/song?"
}

model PointHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  points    Int
  reason    String
  createdAt DateTime @default(now())
  
  // ⭐ MOST CRITICAL INDEX - Your point history page was scanning+sorting ALL rows
  @@index([userId, createdAt(sort: Desc)]) // CRITICAL: Enables instant sorted queries (no in-memory sort!)
  @@index([reason]) // Analytics: "Total points earned from watching movies"
  @@index([createdAt]) // Global point history queries
}

model WeeklyActivity {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekStart     DateTime
  moviesWatched Int      @default(0)
  songsListened Int      @default(0)
  bonusClaimed  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // ⭐ CRITICAL: Changed from @@index to @@unique - only ONE activity per user per week!
  @@unique([userId, weekStart]) // Prevents duplicates + makes lookups instant
  @@index([weekStart]) // Analytics: "All users' activity this week"
  @@index([bonusClaimed]) // "Users who haven't claimed bonus yet"
}

model Avatar {
  id          String   @id @default(cuid())
  name        String   @unique
  imagePath   String   @unique
  pointsCost  Int
  createdAt   DateTime @default(now())
  
  unlockedBy     UserAvatar[]
  currentForUsers User[]  @relation("UserCurrentAvatar")
  
  @@index([pointsCost]) // "Show me avatars I can afford with my points"
}

model UserAvatar {
  id        String   @id @default(cuid())
  userId    String
  avatarId  String
  unlockedAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  avatar    Avatar   @relation(fields: [avatarId], references: [id], onDelete: Cascade)
  
  @@unique([userId, avatarId])
  @@index([userId, unlockedAt]) // User's avatars sorted by when they unlocked them
  @@index([avatarId]) // "How many people unlocked this avatar?"
}